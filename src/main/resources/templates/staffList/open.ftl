<#include "../public_header.ftl">
	<link rel="stylesheet" type="text/css" href="/static/css/staffList/open.css">
	<script type="text/javascript" src="/static/js/staffList/open.js"></script>

</head>
<body>

	<div class="zq-body">
        <input type="hidden" value="${staffId}" name="staffId">
		<div class="inner">
			
			<div class="img">
				<img src="/static/image/d8aebed2fbe0f756a70bdae763028327_1.jpg">
			</div>
			<div class="info">
				
				<div class="up">
					<table>
						<tr>
							<td><span class="name"></span></td>
						</tr>
						<tr>
							<td class="userid"><@spring.message code="staffList_Numbering"/>:<span></span></td>
						</tr>
					</table>
				</div>

				<div class="down">
					<div class="layui-row">
                        <div class="layui-col-md3 staffGroupName">
                            <label><@spring.message code="staffList_Employeeauthority"/>：</label>
                            <span></span>
                        </div>

                        <div class="layui-col-md3 bornYears">
							<label><@spring.message code="zq_dateofbirth"/>：</label>
							<span></span>
						</div>
                        <div class="layui-col-md3 age">
                            <label><@spring.message code="zq_age"/>：</label>
                            <span></span>
                        </div>
					</div>	
					<div class="layui-row">
						<div class="layui-col-md3 position">
							<label><@spring.message code="staffList_Jobrole"/>：</label>
							<span></span>
						</div>	
						<div class="layui-col-md3 mobile">
							<label><@spring.message code="staffList_contactdetails"/>：</label>
							<span></span>
						</div>
                        <div class="layui-col-md3 sex">
                            <label><@spring.message code="zq_sex"/>：</label>
                            <span></span>
                        </div>
					</div>
					<div class="layui-row">
						<div class="layui-col-md3 attribution">
							<label>归属地：</label>
							<span></span>
						</div>
						<div class="layui-col-md3 warehouseName">
							<label>所属仓库：</label>
							<span></span>
						</div>

					</div>
				</div>

			</div>

		</div>

		<div class="layui-tab layui-tab-card open-tab">
			<ul class="layui-tab-title">
				<li class="layui-this"><@spring.message code="staffList_Operationrecord"/></li>
				<li><@spring.message code="staffList_Pieceworkstatistics"/></li>
			</ul>
			<div class="layui-tab-content">
				<div class="layui-tab-item layui-show">
                    <table id="idTest" lay-filter="demo"></table>
				</div>
   	 			<div class="layui-tab-item">2</div>
			</div>
		</div>

	</div>	

</body>
</html>