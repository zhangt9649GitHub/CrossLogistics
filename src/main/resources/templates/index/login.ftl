<#include "../public_header.ftl">


	<link rel="stylesheet" type="text/css" href="/static/css/index/login.css">
	<script type="text/javascript" src="/static/js/index/login.js"></script>

</head>
<body class="login-bg">
	<!-- 登入 -->
	<div class="login">
		<div class="message"><@spring.message code="index_login_title"/></div>
		<div id="darkbannerwrap"></div>
		<form class="layui-form">
			
			<input type="text" name="userName" lay-verify="required" placeholder='<@spring.message code="index_login_username"/>'  class="layui-input"/>
			<hr class="hr15">
			<input type="password" name="password" lay-verify="required" placeholder='<@spring.message code="index_login_password"/>' class="layui-input" />
			<hr class="hr15">
			<input type="submit" value='<@spring.message code="index_login_Login"/>' lay-submit lay-filter="login" />
			<hr class="hr20">
		</form>
	</div>
</body>
</html>