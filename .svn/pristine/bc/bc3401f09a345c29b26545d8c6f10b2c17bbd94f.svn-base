




/* 轮播图 start */
#banner .swiper-container {
    width: 100%;
    height: 487px;
} 

#banner img{
	width: 100%;
    height: 487px;
    vertical-align: top;
}

/* 轮播图 end */



/* 关于我们 start */
#aboutus{
	padding:40px 0;
}
#aboutus .title h3{
	text-align: center;
	font-size: 20px;
	font-weight: 600;
	letter-spacing:8px;
}
#aboutus .content{
	margin-top: 30px;
}
#aboutus .item{
	overflow: hidden;
	display: flex;
}

#aboutus .content .left,#aboutus .content .right{
	width: 50%;
	box-sizing: border-box;
	line-height: 1.5;
	padding: 10px 10px;
}
#aboutus .content .left img{
	width: 100%;
}
#aboutus .content .right .wrap{
	margin-top: 50px;
}
#aboutus .content .right .title{
	font-size: 18px;
	font-weight:600;
	text-align: center;
	letter-spacing: 8px;
	margin-bottom: 20px;
}

#aboutus .content .right .info{
	text-align: center;
	line-height: 2;
	letter-spacing: 5px;
}

/* 关于我们 end */


/* 查询 start  */
#query{
	position: relative;
	top:-120px;
	z-index: 999;
	padding: 0;
}
#query form{
	width: 400px;
	border-top-right-radius: 3px;
    border-top-left-radius: 3px;
	background-color: #fff;
	padding: 15px;
}
#query form .title{
	font-size: 18px;
	line-height: 28px;
	letter-spacing:5px;
	color: #DC1E32;
}
#query .error{
	color:red;
	margin-top: 5px;
	opacity: 0;
}
/* 查询 end */